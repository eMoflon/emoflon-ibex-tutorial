rule staff(time1:Daytime, time2:Daytime)
refines person {
	++person: Staff {
		++ -shiftPlan -> shiftPlan
		
		++ -treatment -> treatment
		
		
	}

	++shiftPlan: Shiftplan {
		++ -shifts -> shift
		++ -shifts -> shift2
	}

	++ shift: Shift {
		.time:=param::time1
	}
	++ shift2: Shift {
		.time:=param::time2
	}
	treatment:Treatment{
		
	}
	#count(findTreatment)<3
	
}

